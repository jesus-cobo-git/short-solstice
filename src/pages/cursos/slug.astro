import { useEffect, useState } from "react";
import { useParams } from "react-router-dom";

// Obtener el parÃ¡metro dinÃ¡mico del URL
const { slug } = useParams();

const [curso, setCurso] = useState(null);
const [loading, setLoading] = useState(true);

useEffect(() => {
  const fetchCurso = async () => {
    try {
      const response = await fetch(
        `https://proyectofinal-f186e-default-rtdb.europe-west1.firebasedatabase.app/cursos.json`
      );


      if (!slug) {
  console.error("El slug es undefined");
  return;
}


      // Buscar el curso por el slug (id)
const data: Curso[] = await response.json();
const cursoEncontrado: Curso | undefined = data.find((c) => c.id === parseInt(slug));

if (!cursoEncontrado) {
  console.error("Curso no encontrado");
  return;
}


      setCurso(cursoEncontrado);
    } catch (error) {
      console.error("Error al obtener el curso:", error);
    } finally {
      setLoading(false);
    }
  };

  fetchCurso();
}, [slug]);

if (loading) return <p class="text-center text-gray-600">Cargando curso...</p>;
if (!curso) return <p class="text-center text-red-600">Curso no encontrado</p>;
